#!/usr/bin/env bash
#
# Display current exchange rates for RSD.
#
# $ kurs [eur|usd|chf|...]

set -e
set -o pipefail

[[ $1 ]] && CURRENCY="$1"
CURRENCY=${CURRENCY:-eur}

curl -Ssf "https://kurs.resenje.org/api/v1/currencies/$CURRENCY/rates/today" \
  | jq '{code,date_from,exchange_buy,exchange_middle,exchange_sell}'
